        android:textSize="27dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/freeshipping"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/CDSCRTbtn1"
        android:layout_width="wrap_content"
