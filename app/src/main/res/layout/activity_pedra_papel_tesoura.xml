<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedraPapelTesoura">

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/PPTed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESCOLHA UM:"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:fontFamily="@font/freeshipping"

        />
    <ImageView
        android:layout_below="@id/PPTed1"
        android:layout_marginTop="20dp"
        android:id="@+id/pedra"
        android:layout_width="166dp"
        android:layout_height="176dp"
        app:srcCompat="@drawable/pedra"
        android:layout_centerHorizontal="true"
 />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@id/pedra"
        android:layout_centerHorizontal="true"
        android:id="@+id/tesoura"
        android:layout_width="166dp"
        android:layout_height="176dp"
        app:srcCompat="@drawable/tesoura"
        />

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/papel"
        android:layout_width="166dp"
        android:layout_height="176dp"
        android:layout_below="@id/tesoura"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/papel" />
</RelativeLayout>